@model IEnumerable<SOSBilbao.Models.UsuarioFarmacia>


@{
    ViewData["Title"] = "Details";
}

<h1>Farmacias Favoritas</h1>

<div class="row" id="row">

    @*MSTRAR LAS FARMACIAS FAVORITAS DE UN USUARIO*@
    @*Una vez que hemos agregado una farmacia a favoritos en esta vista podemos ver tarjetas con las farmacias favoritas*@
    @*Tarjeta "Farmacia Favorita " con : Nombre, Telefono, Latitud y Longitud *@

    @foreach (var item in Model)
    {
        <div class="card col-sm-12 col-md-6 col-lg-4 border-primary" style="width: 18rem;">
            <h3 class="nombre card-header ">@item.Farmacia.Nombre</h3>
            <div class="card-body">
                <h5 class="card-title">@item.Farmacia.Direccion</h5>
                <h6 class="card-subtitle text-muted">@item.Farmacia.Telefono</h6>
                <h6 class="latitud card-subtitle text-muted ">@item.Farmacia.Longitud</h6>
                <h6 class="longitud card-subtitle text-muted ">@item.Farmacia.Latitud</h6>
            </div>
            <img style="height: 200px; width: 100%; display: block;" src="@Url.Content(item.Farmacia.Imagen)" alt="Card image">
            <div class="card-body">
                <input type="submit" class="btn btn-outline-primary" value="Ver Horarios" />
            </div>

        </div>
    }
</div>
