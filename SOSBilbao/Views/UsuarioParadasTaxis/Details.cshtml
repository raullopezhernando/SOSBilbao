@model IEnumerable<SOSBilbao.Models.UsuarioParadasTaxi>


@{
    ViewData["Title"] = "Details";
}

<h1>Paradas de Taxi Favoritas</h1>

<div class="row" id="row">

    @*MSTRAR LAS Paradas Taxi Favoritas*@
    @*Una vez que hemos agregado una para de taxis a favoritos en esta vista podemos ver tarjetas con las paradas de taxi favoritas*@
    @*Tarjeta "ParadaTaxi Favorita " con : Nombre, Telefono, Latitud y Longitud *@

    @foreach (var item in Model)
    {
        <div class="card col-sm-12 col-md-6 col-lg-4 border-primary" style="width: 18rem;">
            <h3 class="nombre card-header ">@item.ParadaTaxi.Direccion</h3>
            <div class="card-body">
                <h5 class="card-title">@item.ParadaTaxi.Zona</h5>
                <h6 class="latitud card-subtitle text-muted ">@item.ParadaTaxi.Latitud</h6>
                <h6 class="longitud card-subtitle text-muted ">@item.ParadaTaxi.Longitud</h6>
            </div>
            <img style="height: 200px; width: 100%; display: block;" src="@Url.Content(item.ParadaTaxi.Imagen)" alt="Card image">
            <div class="card-body">
                <input type="submit" class="btn btn-outline-primary" value="Ver Horarios" />
            </div>

        </div>
    }
</div>
